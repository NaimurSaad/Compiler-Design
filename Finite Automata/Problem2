// a(a+b)*+b

#include <iostream>
#include <string>
using namespace std;

bool fa(const string& input) {
    int state = 0;

    for (char c : input) {
        switch (state) {
            case 0:
                if (c == 'a') state = 1;
                else if (c == 'b') state = 2;
                else state = 3;
                break;

            case 1:
                if (c == 'a' || c == 'b') state = 1;
                else state = 3;
                break;

            case 2:
                state = 3;
                break;

            case 3:
                state = 3;
                break;
        }
    }

    return (state == 1 || state == 2);
}

int main() {
    cout<<"Alpha={a,b}"<<endl;
    cout<<"RE= a(a+b)*+b"<<endl;
    string input;
    cout << "Input String: ";
    getline(cin,input);

    if (fa(input))
        cout << "\nAccepted" << endl;
    else
        cout << "\nRejected" << endl;

    return 0;
}

