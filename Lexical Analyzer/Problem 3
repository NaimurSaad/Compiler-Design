#include <iostream>
using namespace std;

int main() {
    string s;
    cout << "Enter a line: ";
    getline(cin, s);

    int count = 0;
    for(int i = 0; s[i]!='\0'; i++){
        count++;
    }


    if(s[0]=='/' && s[1]=='/'){
        cout<<"Single line comment";
    }
    else if(s[0]=='/' && s[1]=='*' && s[count-2]=='*'&& s[count-1]=='/')
        {
        cout<<"Multiple line comment";
    }
    else{
        cout<<"Not a comment";
    }

    return 0;
}
